<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="net.hunme.user.activity.ModifyPhoneActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="@dimen/space_x2"
        android:padding="@dimen/space"
        android:background="@drawable/password_selecter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/phone"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/space_x0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_password"
            android:layout_marginLeft="@dimen/space_x0.5"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:hint="请输入密码"
            android:textColorHint="@color/pgrey"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:layout_marginRight="@dimen/space_x2"
        android:id="@+id/bt_pnext"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_xx_large"
        android:background="@drawable/conform_selecter"
        android:layout_marginLeft="@dimen/space_x2"
        android:padding="@dimen/space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
