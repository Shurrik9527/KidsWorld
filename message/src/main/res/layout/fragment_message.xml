<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <net.hunme.baselibrary.widget.NavigationBar
        android:id="@+id/nb_message"
        android:background="@color/red_message"
        android:padding="@dimen/space"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <net.hunme.baselibrary.widget.PagerSlidingTabStrip
        android:id="@+id/pst_meaasge"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/space_x4"
        android:layout_marginRight="@dimen/space_x4"
        app:selectedTabTextColor="@color/red_message"
        app:pstsIndicatorColor="@color/red_message"
        app:pstsDividerPadding="10dp"
        app:pstsIndicatorHeight="2dp"
        app:pstsShouldExpand="true"
        app:pstsUnderlineHeight="0dp"/>

    <!--可滑动的布局内容-->
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>