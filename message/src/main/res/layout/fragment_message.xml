<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <!--<net.hunme.baselibrary.widget.NavigationBar
        android:id="@+id/nb_message"
        android:background="@color/red_message"
        android:padding="@dimen/space"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>-->
    <RelativeLayout
        android:background="@color/red_message"
        android:padding="@dimen/space"
        android:layout_width="match_parent"

        android:layout_height="50dp">
        <TextView
            android:layout_centerInParent="true"
            android:text="通讯"
            android:textSize="@dimen/ts_x_large"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_search"
            android:src="@mipmap/search"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <LinearLayout
          android:id="@+id/ll_class"
          android:padding="@dimen/space_x0.5"
          android:gravity="center"
          android:layout_weight="1"
          android:orientation="vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
          <ImageView
              android:src="@mipmap/myclass"

              android:layout_width="40dp"
              android:layout_height="40dp" />
          <TextView
              android:text="班级"
              android:textColor="@color/myclass"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
      </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_teacher"
            android:padding="@dimen/space_x0.5"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/teacher"

                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:text="老师"
                android:textColor="@color/myteacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_parent"
            android:padding="@dimen/space_x0.5"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/parent"

                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:text="家长"
                android:textColor="@color/parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/gray_6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_gray"/>
    <FrameLayout
        android:id="@+id/rong_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>