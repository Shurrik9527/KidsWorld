<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <View
        android:layout_gravity="bottom"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_gray" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/ll_status"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/ic_test01"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <FrameLayout
                    android:layout_gravity="right"
                    android:padding="1dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_dos_status"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="right"
                        android:background="@drawable/circledos"
                        android:textSize="15dip"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />
                </FrameLayout>

            </FrameLayout>
            <TextView
                android:id="@+id/tv_status"
                android:textColor="@color/red"
                android:text="动态"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/ll_school"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_school"
                android:layout_gravity="center"
                android:src="@mipmap/school"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/tv_school"
                android:text="学校"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/ll_discovery"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/ic_test01"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/tv_discovery"
                android:text="乐园"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/ll_message"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/ic_test01"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <FrameLayout
                    android:layout_gravity="right"
                    android:padding="1dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_dos_message"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="right"
                        android:background="@drawable/circledos"
                        android:gravity="center"
                        android:textSize="15dip"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />
                </FrameLayout>

            </FrameLayout>
            <TextView
                android:id="@+id/tv_message"
                android:text="通讯"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
